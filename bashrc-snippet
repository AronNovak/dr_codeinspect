# GIT helpers from http://www.catonmat.net/blog/git-aliases/ (customized)
export DR_CODEINSPECT_INTERACTIVE=1
alias gm=$HOME'/.devtools/drupal-sniff && git commit -m'
alias ga='git add'
alias gp='git push'
alias gl='git log  --pretty=format:"%Cgreen%h %Creset %s %Cblueby %an (%ar) %Cred %d" --graph'
alias gs='git status'
alias gsh='git show'
alias gd='git diff --color'
alias gdc='git diff --cached'
alias gma='git commit -am'
alias gb='git branch'
alias gc='git checkout'
alias gra='git remote add'
alias grr='git remote rm'
alias gpu='git pull'
alias gcl='git clone'
